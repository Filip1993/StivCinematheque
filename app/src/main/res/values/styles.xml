<resources>

    <!--ThemeOverlay.AppCompat.Dark.ActionBar-->
    <style name="AppTheme" parent="Platform.AppCompat">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleStyle">@style/ActionBarTitle</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowTitleSize">39dp</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/checkbox</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowAnimationStyle">@style/InitScreenAnimation</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="InitScreenAnimation">
        <item name="android:windowEnterAnimation">@anim/abc_fade_in</item>
        <item name="android:windowExitAnimation">@anim/abc_fade_out</item>
    </style>


    <style name="MovieTitles">
        <item name="android:textColor">#779ECB</item>
    </style>

    <style name="ActionBarTitle">
        <item name="android:textColor">#c0c0c0</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">15dp</item>
    </style>

</resources>
